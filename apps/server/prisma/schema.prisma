generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Message{
  id Int  @id @default(autoincrement())
  test String
  createdAt DateTime @default(now()) @map("created_at")

  @@map("messages")
}


